<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:outlineAmbientShadowColor="@color/cardview_dark_background"
    android:elevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_percen_rv_attendance"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textColor="@color/colorCardPrimary"
            android:gravity="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_subj_rv_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:textSize="32sp"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_rv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:text="delete"
                    android:textColor="@color/colorPrimaryTextLight"
                    android:textStyle="bold"
                    android:textSize="10sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_teacher_rv_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proff"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="17sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_present"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present: 23"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_present_minus"
                    android:layout_width="80px"
                    android:layout_height="60px"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/minus"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/tv_absent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Absent: 2"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_absent_minus"
                    android:layout_width="80px"
                    android:layout_height="60px"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/minus"
                    android:clickable="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="17sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_atten_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present"
                    android:background="@color/atten_up"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryTextLight" />

                <Button
                    android:id="@+id/btn_atten_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#D32F2F"
                    android:text="Absent"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryTextLight" />

                <Button
                    android:id="@+id/btn_edit_attendance_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="#FF6F00"
                    android:text="Edit"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryTextLight"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>