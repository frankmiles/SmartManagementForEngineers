<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    tools:context=".Register">

    <Spinner
        android:id="@+id/spinner_Register_collage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tv_Name" />

    <EditText
        android:id="@+id/et_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="et_Name" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tv_email" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/tv_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tv_branch" />

    <Spinner
        android:id="@+id/spinner_Register_branch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_Sem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tv_Sem" />

    <Spinner
        android:id="@+id/spinner_Register_Sem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_RegNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tv_RegNumber" />

    <EditText
        android:id="@+id/et_RegNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnRegister_Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btnRegister_Submit" />

</LinearLayout>